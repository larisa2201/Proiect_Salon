                        <Label Content="Id serviciu:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="3" VerticalAlignment="Center"/>
                        <TextBox x:Name="id_serviciuTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="3" Grid.Row="3" Text="{Binding Id_serviciu, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
                        <Label Content="Total:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="4" VerticalAlignment="Center"/>
                        <TextBox x:Name="totalTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="3" Grid.Row="4" Text="{Binding Total, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
                    </Grid>
                    <Button Content="Next" HorizontalAlignment="Left" Margin="325.1,300,-20.4,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2" Grid.Column="1"/>
                    <Button Content="Previous" HorizontalAlignment="Left" Margin="73.1,300,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1" Grid.Column="1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Programari">
                <Grid Background="#FFE5E5E5" DataContext="{StaticResource programariViewSource}" Margin="0,0,13,-28">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="13*"/>
                        <ColumnDefinition Width="145*"/>
                        <ColumnDefinition Width="71*"/>
                        <ColumnDefinition Width="546*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="programariDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="162.2,69,10.2,215" RowDetailsVisibilityMode="VisibleWhenSelected" Grid.Column="3">
                        <DataGrid.Columns>
                            <DataGridTextColumn x:Name="dataColumn" Binding="{Binding Data}" Header="Data" Width="SizeToHeader"/>
                            <DataGridTextColumn x:Name="id_angajatColumn" Binding="{Binding Id_angajat}" Header="Id angajat" Width="SizeToHeader"/>
                            <DataGridTextColumn x:Name="id_clientColumn" Binding="{Binding Id_client}" Header="Id client" Width="SizeToHeader"/>
                            <DataGridTextColumn x:Name="id_programareColumn" Binding="{Binding Id_programare}" Header="Id programare" Width="SizeToHeader"/>
                            <DataGridTextColumn x:Name="id_serviciuColumn" Binding="{Binding Id_serviciu}" Header="Id serviciu" Width="SizeToHeader"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid x:Name="grid2" Grid.Column="1" HorizontalAlignment="Left" Margin="108.2,69,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Height="160" Width="217">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0"/>
                            <ColumnDefinition Width="94.4"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0"/>
                            <RowDefinition Height="32"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Content="Data:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="0" VerticalAlignment="Center" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                        <TextBox x:Name="dataTextBox" Grid.Column="2" HorizontalAlignment="Left" Height="24" Margin="2.6,4,-0.2,4" Grid.Row="0" Text="{Binding Data, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120" Grid.RowSpan="2"/>
                        <Label Content="Id angajat:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="2" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
