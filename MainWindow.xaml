                        <Label Content="Id serviciu:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="1" VerticalAlignment="Center"/>
                        <TextBox x:Name="id_serviciuTextBox3" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="3" Grid.Row="1" Text="{Binding Id_serviciu, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120" IsEnabled="False"/>
                        <Label Content="Pret:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="2" VerticalAlignment="Center"/>
                        <TextBox x:Name="pretTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="3" Grid.Row="2" Text="{Binding Pret, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
                        <Label Content="Timp Executie:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="3" VerticalAlignment="Center"/>
                        <TextBox x:Name="timp_ExecutieTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="28" Margin="3.2,4,0,0" Grid.Row="3" Text="{Binding Timp_Executie, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="113"/>
                    </Grid>


                    <Button x:Name="btnNextS" Content="Next" Grid.Column="1" HorizontalAlignment="Left" Margin="34.6,182,0,0" VerticalAlignment="Top" Width="75" Click="btnNextS_Click"/>
                    <Button x:Name="BtnPrevS" Content="Previous" Grid.Column="1" HorizontalAlignment="Left" Margin="114.6,182,0,0" VerticalAlignment="Top" Width="75" Click="BtnPrevS_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Angajati">
