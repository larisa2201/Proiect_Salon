                        <Label Content="Id client:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="3" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="id_clientTextBox1" Grid.Column="2" HorizontalAlignment="Left" Height="24" Margin="2.6,4,-0.2,4" Grid.Row="3" Text="{Binding Id_client, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
                        <Label Content="Id programare:" Grid.Column="0" HorizontalAlignment="Left" Margin="0,0,0,6" Grid.Row="4" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="id_programareTextBox" Grid.Column="2" HorizontalAlignment="Left" Height="24" Margin="2.6,4,-0.2,4" Grid.Row="4" Text="{Binding Id_programare, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120" IsEnabled="False"/>
                        <Label Content="Id serviciu:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="5" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="id_serviciuTextBox1" Grid.Column="2" HorizontalAlignment="Left" Height="24" Margin="2.6,4,-0.2,4" Grid.Row="5" Text="{Binding Id_serviciu, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
                    </Grid>
                    <Button Content="Next" Grid.Column="3" HorizontalAlignment="Left" Margin="436.2,232,0,0" VerticalAlignment="Top" Width="75" Height="19" Click="Button_Click_4"/>
